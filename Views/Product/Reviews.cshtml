@using Northwind.Models
@model Product

<div class="bg-primary m-1 p-1 text-white"><h4>Product Details</h4></div>

@if (!Model.Reviews.Any())
{
  <p>There are no reviews</p>
}
else
{
  <ul>
    @foreach (Review review in Model.Reviews)
    {
      <li>
          @review.Rating - @review.ReviewText
          
          @if (User?.Identity?.IsAuthenticated ?? true)
          {
            if (User.IsInRole("blogs-moderate"))
            {
                <span> | </span><a asp-action="Delete" asp-route-id="@review.ProductID">Delete</a>
            }
          }
      </li>
    }
  </ul>
}

<hr />
<a asp-action="Index">Home</a> | 
<a asp-action="AddReview" asp-route-id="@Model.ProductId">New Review</a>