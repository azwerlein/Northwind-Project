@model CustomerWithPassword
<h2 class="mt-3"><i class="far fa-address-card"></i> Customer Register</h2>

<form method="post" asp-action="Register">
    <div asp-validation-summary="All"></div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="@Model.Customer.Email">Email</label>
            <input asp-for="@Model.Customer.Email" class="form-control" placeholder="Email" />
        </div>
        <div class="form-group col-md-6">
            <label asp-for="@Model.Password">Password</label>
            <input asp-for="@Model.Password" class="form-control" placeholder="Password" />
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="@Model.Customer.CompanyName">Company Name</label>
            <input asp-for="@Model.Customer.CompanyName" class="form-control" placeholder="Company Name" />
        </div>
        <div class="form-group col-md-6">
            <label asp-for="@Model.Customer.Address">Address</label>
            <input asp-for="@Model.Customer.Address" class="form-control" placeholder="Address" />
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-3">
            <label asp-for="@Model.Customer.City">City</label>
            <input asp-for="@Model.Customer.City" class="form-control" placeholder="City" />
        </div>
        <div class="form-group col-md-3">
            <label asp-for="@Model.Customer.Region">Region</label>
            <input asp-for="@Model.Customer.Region" class="form-control" placeholder="Region" />
        </div>
        <div class="form-group col-md-3">
            <label asp-for="@Model.Customer.PostalCode">Postal Code</label>
            <input asp-for="@Model.Customer.PostalCode" class="form-control" placeholder="Postal Code" />
        </div>
        <div class="form-group col-md-3">
            <label asp-for="@Model.Customer.Country">Country</label>
            <input asp-for="@Model.Customer.Country" class="form-control" placeholder="Country" />
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="@Model.Customer.Phone">Phone</label>
            <input asp-for="@Model.Customer.Phone" class="form-control" placeholder="Phone" />
        </div>
        <div class="form-group col-md-6">
            <label asp-for="@Model.Customer.Fax">Fax</label>
            <input asp-for="@Model.Customer.Fax" class="form-control" placeholder="Fax" />
        </div>
    </div>
    
    <button type="submit" class="btn btn-outline-primary">Register</button>
</form>
